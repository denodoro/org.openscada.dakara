<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="detailView" name="detailView" schema="schema/detailView.exsd"/>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.openscada.vi.details"
            id="org.openscada.vi.details.showDetailDialog"
            name="Show Detail Dialog">
         <commandParameter
               id="org.openscada.vi.details.showDetailDialog.id"
               name="Detail View ID"
               optional="false">
         </commandParameter>
         <commandParameter
               id="org.openscada.vi.details.showDetailDialog.parameters"
               name="Parameters"
               optional="true"
               typeId="org.openscada.vi.details.properties">
         </commandParameter>
      </command>
      <commandParameterType
            converter="org.openscada.vi.details.handler.ParameterConverter"
            id="org.openscada.vi.details.properties"
            type="java.util.Map">
      </commandParameterType>
      <category
            id="org.openscada.vi.details"
            name="VI Details">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openscada.vi.details.handler.ShowDetailDialog"
            commandId="org.openscada.vi.details.showDetailDialog">
      </handler>
   </extension>

</plugin>
