<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="view" name="Visual Interface View" schema="schema/view.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.openscada.vi.ui.category"
            class="org.openscada.vi.ui.user.SingleVisualInterfaceViewPart"
            id="org.openscada.vi.ui.user.SingleVisualInterfaceView"
            name="Single Visual Interface"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.openscada.vi.ui.user.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.openscada.vi.ui.user.SingleVisualInterfaceView">
         <command
               commandId="org.openscada.vi.ui.user.showSummaries"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.openscada.vi.ui.user.showSummaries"
            name="Show Summaries">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.openscada.vi.ui.user.showSummaries">
         <class
               class="org.openscada.vi.ui.user.debug.ShowSummariesHandler">
         </class>
      </handler>
   </extension>

</plugin>
