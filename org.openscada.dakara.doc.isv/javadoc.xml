<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc">
	
	<property name="buildDirectory" location="../builder_dakara/builder/build"/>
	<property name="transformedRepoLocation" location="${buildDirectory}/transformedRepo"/>
	
    <target name="javadoc">
    	
    	<path id="classpath">
    		<fileset dir="${transformedRepoLocation}/plugins">
    			<include name="**/*.jar"/>
    		</fileset>
    	</path>
    	
        <javadoc
        		access="public"
        		author="true"
        		classpathref="classpath"
        		destdir="${buildDirectory}/plugins/org.openscada.dakara.doc.isv/reference/api"
        		nodeprecated="false"
        		nodeprecatedlist="false"
        		noindex="false"
        		nonavbar="false"
        		notree="false"
        		source="1.6"
        		splitindex="true"
        		use="true"
        		version="true">
        	<sourcepath location="${buildDirectory}/plugins/org.openscada.vi.ui.draw2d/src"/>
    	</javadoc>
    </target>
</project>
